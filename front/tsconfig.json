{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": "./",
		"moduleResolution": "bundler",
		"types": [
			"svelte",
			"@sveltejs/kit"
		],
		"paths": {
			"$": [
				"./src"
			],
			"$*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"svelte.config.js"
	]
}